pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = 'dockerizzz/genai-agent'
        DOCKER_TAG = "${env.BUILD_NUMBER}"
        
        // Credentials from Jenkins Credentials Manager
        GEMINI_API_KEY = credentials('gemini-api-key')
        ANTHROPIC_API_KEY = credentials('anthropic-api-key')
    }
    
    stages {

        stage('Checkout') {
            steps {
                echo 'Checking out code from GitHub...'
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image...'
                script {
                    sh """
                        docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} .
                        docker tag ${DOCKER_IMAGE}:${DOCKER_TAG} ${DOCKER_IMAGE}:latest
                    """
                }
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                script {
                    sh """
                        echo "Starting test container..."
                        docker run --rm -d --name test-container \
                            -p 5001:5000 \
                            -e ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY} \
                            ${DOCKER_IMAGE}:${DOCKER_TAG}

                        echo "Waiting for service to start..."
                        sleep 10

                        echo "Testing /health endpoint..."
                        curl -f http://localhost:5001/health || exit 1

                        docker stop test-container
                    """
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying application...'
                script {
                    sh """
                        docker stop genai-agent-app || true
                        docker rm genai-agent-app || true

                        docker run -d --name genai-agent-app \
                            -p 5000:5000 \
                            -e ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY} \
                            --restart unless-stopped \
                            ${DOCKER_IMAGE}:latest

                        sleep 5
                        curl -f http://localhost:5000/health
                    """
                }
            }
        }

        stage('Cleanup') {
            steps {
                echo 'Cleaning up old Docker images...'
                script {
                    sh """
                        # keep only last 3 build images
                        docker images ${DOCKER_IMAGE} --format '{{.Tag}}' | \
                        grep -v latest | sort -n | head -n -3 | \
                        xargs -r -I {} docker rmi ${DOCKER_IMAGE}:{}
                    """
                }
            }
        }
    }

    post {
        success {
            echo 'üéâ Pipeline completed successfully!'
        }
        failure {
            echo '‚ùå Pipeline failed!'
        }
        always {
            echo 'üßπ Cleaning workspace...'
            cleanWs()
        }
    }
}
